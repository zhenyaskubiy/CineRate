<div class="max-w-md mx-auto mt-16 p-8 bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20">
  
  <div class="text-center mb-8">
    <h2 class="text-3xl font-['Anton'] uppercase tracking-wider text-gray-900">Reset Password</h2>
    <p class="text-sm text-gray-500 mt-2 font-medium">We'll send you instructions to your email</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-1">
      <%= f.label :email, class: "text-[10px] font-bold uppercase tracking-[0.2em] text-gray-400 ml-1" %>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          placeholder: "your@email.com",
          class: "w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:ring-2 focus:ring-red-300 focus:border-transparent outline-none transition" %>
    </div>

    <div class="pt-2">
      <%= f.button type: :submit, 
          class: "group relative w-full inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-bold rounded-xl bg-gradient-to-br from-red-200 via-red-300 to-yellow-200 hover:text-white transition" do %>
        <span class="relative w-full px-4 py-3 rounded-xl bg-black text-white transition group-hover:bg-transparent group-hover:text-gray-900 text-center uppercase tracking-widest text-xs">
          Send Instructions
        </span>
      <% end %>
    </div>
  <% end %>

  <div class="mt-8 pt-6 border-t border-gray-100/50 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
