<div class="max-w-md mx-auto mt-10 p-8 bg-white rounded-3xl shadow-xl border border-gray-100">
  
  <div class="flex justify-center p-1 bg-gray-100 rounded-2xl gap-1 mb-8">
    <%= link_to "Sign up",
                new_user_registration_path,
                class: "flex-1 text-center py-2.5 rounded-xl text-sm font-semibold transition
                        #{current_page?(new_user_registration_path) ? 'bg-black text-white shadow-lg' : 'text-gray-500 hover:text-black'}" %>

    <%= link_to "Sign in",
                new_user_session_path,
                class: "flex-1 text-center py-2.5 rounded-xl text-sm font-semibold transition
                        #{current_page?(new_user_session_path) ? 'bg-black text-white shadow-lg' : 'text-gray-500 hover:text-black'}" %>
  </div>

  <h2 class="text-3xl font-['Anton'] uppercase tracking-wider text-center mb-6">Join Cinerate</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-1">
      <%= f.label :email, class: "text-xs font-bold uppercase tracking-widest text-gray-500 ml-1" %>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          placeholder: "your@email.com",
          class: "w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:ring-2 focus:ring-red-300 focus:border-transparent outline-none transition" %>
    </div>

    <div class="space-y-1">
      <div class="flex justify-between items-end">
        <%= f.label :password, class: "text-xs font-bold uppercase tracking-widest text-gray-500 ml-1" %>
        <% if @minimum_password_length %>
          <span class="text-[10px] text-gray-400 mb-1">(min <%= @minimum_password_length %> chars)</span>
        <% end %>
      </div>
      <%= f.password_field :password, 
          autocomplete: "new-password", 
          placeholder: "••••••••",
          class: "w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:ring-2 focus:ring-red-300 focus:border-transparent outline-none transition" %>
    </div>

    <div class="space-y-1">
      <%= f.label :password_confirmation, "Confirm Password", class: "text-xs font-bold uppercase tracking-widest text-gray-500 ml-1" %>
      <%= f.password_field :password_confirmation, 
          autocomplete: "new-password", 
          placeholder: "••••••••",
          class: "w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:ring-2 focus:ring-red-300 focus:border-transparent outline-none transition" %>
    </div>

    <div class="pt-4">
      <%= f.button type: :submit, 
          class: "group relative w-full inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-bold rounded-xl bg-gradient-to-br from-red-100 to-red-200 hover:text-white transition" do %>
        <span class="relative w-full px-4 py-3 rounded-xl bg-black text-white transition group-hover:bg-transparent group-hover:text-gray-900 text-center uppercase tracking-widest">
          Create Account
        </span>
      <% end %>
    </div>
  <% end %>
</div>