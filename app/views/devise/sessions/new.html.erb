<div class="max-w-md mx-auto mt-10 p-8 bg-white rounded-3xl shadow-xl border border-gray-100">
  
  <div class="flex justify-center p-1 bg-gray-100 rounded-2xl gap-1 mb-8">
    <%= link_to "Sign up",
                new_user_registration_path,
                class: "flex-1 text-center py-2.5 rounded-xl text-sm font-semibold transition
                        #{current_page?(new_user_registration_path) ? 'bg-black text-white shadow-lg' : 'text-gray-500 hover:text-black'}" %>

    <%= link_to "Sign in",
                new_user_session_path,
                class: "flex-1 text-center py-2.5 rounded-xl text-sm font-semibold transition
                        #{current_page?(new_user_session_path) ? 'bg-black text-white shadow-lg' : 'text-gray-500 hover:text-black'}" %>
  </div>

  <h2 class="text-3xl font-['Anton'] uppercase tracking-wider text-center mb-6">Welcome Back</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
    
    <div class="space-y-1">
      <%= f.label :email, class: "text-xs font-bold uppercase tracking-widest text-gray-500 ml-1" %>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          placeholder: "your@email.com",
          class: "w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:ring-2 focus:ring-red-300 focus:border-transparent outline-none transition" %>
    </div>

    <div class="space-y-1">
      <div class="flex justify-between items-end">
        <%= f.label :password, class: "text-xs font-bold uppercase tracking-widest text-gray-500 ml-1" %>
      </div>
      <%= f.password_field :password, 
          autocomplete: "current-password", 
          placeholder: "••••••••",
          class: "w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:ring-2 focus:ring-red-300 focus:border-transparent outline-none transition" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center ml-1">
        <%= f.check_box :remember_me, class: "w-4 h-4 text-black border-gray-300 rounded focus:ring-red-300" %>
        <%= f.label :remember_me, class: "ml-2 text-sm text-gray-500" %>
      </div>
    <% end %>

    <div class="pt-4">
      <%= f.button type: :submit, 
          class: "group relative w-full inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-bold rounded-xl bg-gradient-to-br from-red-200 via-red-300 to-yellow-200 hover:text-white transition" do %>
        <span class="relative w-full px-4 py-3 rounded-xl bg-black text-white transition group-hover:bg-transparent group-hover:text-gray-900 text-center uppercase tracking-widest">
          Sign In
        </span>
      <% end %>
    </div>
  <% end %>

  <div class="mt-8 pt-6 border-t border-gray-100 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>